{
  "name": "ipfs-url-index",
  "version": "0.1.0",
  "main": "main.js",
  "type": "module",
  "author": "Ilya Kreymer",
  "license": "MIT",
  "private": false,
  "browser": {
    "ipfs-url-index": "./src"
  },
  "dependencies": {
    "@ipld/dag-cbor": "^7.0.0",
    "chunky-trees": "github:mikeal/chunky-trees",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "ipfs-core": "^0.13.0",
    "node-persistent-queue": "^1.0.3",
    "node-stream-zip": "^1.15.0",
    "tempy": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.1",
    "ava": "^3.15.0",
    "c8": "^7.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ejs": "^0.0.2",
    "ipfs-http-server": "^0.10.0",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "supertest": "^6.1.6",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "scripts": {
    "test": "c8 --reporter=lcov --reporter=text ava",
    "lint": "eslint --fix ./src/* ./test/*.js",
    "build": "rollup -c ./rollup.config.js -i ./src/index.js",
    "format": "prettier --write \"src/*.js\" \"test/*.js\""
  },
  "prettier": {},
  "eslintConfig": {
    "env": {
      "browser": false,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "plugins": [
      "ejs"
    ],
    "rules": {
      "no-restricted-globals": [
        2,
        "event",
        "error"
      ],
      "no-unused-vars": "warn",
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "ava": {
    "files": [
      "test/test-new.js",
      "test/test-append.js",
      "test/test-loadexisting.js"
    ],
    "timeout": "3m",
    "serial": true,
    "verbose": true
  }
}
